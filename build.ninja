cc       = cl
linker   = link

cflags   = /O2 /W4
lib_flags = /nologo

rule cc
  command = $cc $cflags /c $in /Fo$out
  description = CC (MSVC) $out
  
rule link
  command = $linker $lib_flags /OUT:$out $in
  description = LINK (MSVC) $out

build main.obj: cc main.c
build app.exe: link main.obj

default app.exe
