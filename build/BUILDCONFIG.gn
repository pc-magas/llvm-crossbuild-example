# build/BUILDCONFIG.gn

declare_args() {
  # Default toolchain is MSVC
  user_toolchain = "msvc"
}

# Pick the default toolchain unconditionally
if (user_toolchain == "msvc") {
  set_default_toolchain("//build/toolchains:msvc")
} else {
  # Anything else (e.g., "clang")
  set_default_toolchain("//build/toolchains:clang")
}

# Helper variable
is_win = host_os == "win"
